<% if ! @sistemas.empty? %>
<ul class="nav nav-tabs">
  <li class="nav-item">
    <%= link_to t(:all), sistemas_path, :class => "nav-link active" %>
  </li>
  <% if user_signed_in? %>
    <li class="nav-item">
      <%= link_to t(:new), new_sistema_path, :class => "nav-link" %>
    </li>
  <% end %>
</ul>

<div class="tab-content">
  <div class="tab-pane active"><br/>
    <table class="table table-responsive">
      <tbody>
        <% @sistemas.each_slice(5) do |p| %>
        <tr>
          <% p.each do |sistema| %>
            <td class="list">
              <%= link_to image_tag(sistema.imagem.url(:thumb), :width => "180"), sistema_path(sistema) %>
              <br/><br/>
              <b><%= link_to sistema.nome + " (" + sistema.experimentos.count.to_s + ")", sistema_path(sistema) %></b>
            </td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<% else %>
  <br/><br/>
  <h3>Nenhum Registro Encontrado. <%= link_to 'Cadastrar?', new_sistema_path %></h3>
<% end %>
